<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_portfolio_platform</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@color/colorBlack</item>
        <item name="itemTextColor">@color/colorBlack</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:actionMenuTextColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
<!--        <item name="windowActionBar">false</item>-->
        <item name="windowNoTitle">true</item>
    </style>


    <style name="act_cs_tabTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>